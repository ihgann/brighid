<div class="row">
  <h2 class="title">Courses</h2>
  <div class="large-4 columns right">
    <p style="margin-top: 20px; margin-bottom: -10px; text-align: right;"><%= link_to "Add new course", new_course_path %></p> 
  </div>
</div>
<hr />

<div class="row">
  <% $i = 0 %>
  <% @courses.each do |course| %>
    <div class="large-3 columns left">
      <%= link_to course.name, course, class:"button radius large b#{$i}" %>
    </div>
    <% $i += 1 %>
    <% if $i % 4 == 0 %>
      </div><div class="row">
    <% end %>
    <% $i = $i % 16 %>
  <% end %>
</div>
