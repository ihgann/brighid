<div class="row">
  <h2 class="title"><%= @course.name %></h2>
  <div class="large-4 columns right">
    <% if not @course.instructor.empty? %>
      <p style="margin-top: 20px; margin-bottom: -10px; text-align: right;">
      <%= link_to "Edit course", edit_course_path(@course) %> - 
      Instructor <%= @course.instructor %></p> 
    <% end %>
  </div>
</div>
<hr />

<div class="row">
  <div class="large-8 columns">
    <h4>Notes</h4>
  </div>
</div>

<div class="row">
  <div class="large-12 columns">
    <ul class="inline-list">
    <% @notes.each do |note| %>
      <li><%= link_to note.name, note %></li>
    <% end %>
    </ul>
  </div>
</div>

<div class="row">
  <div class="large-12 columns">
    <p><%= link_to "Add a new note", new_note_path(:course => @course.id), class:"button radius small b6" %></p>
  </div>
</div>
