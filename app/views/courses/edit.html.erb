<div class="row">
  <h2 class="title"> Course</h2>
  <div class="large-4 columns right">
    <p style="margin-top: 20px; margin-bottom: -10px; text-align: right;"><%= link_to "Courses", courses_path %></p> 
  </div>
</div>
<hr />

<div style="width: 80%; text-align: left;">
<%= simple_form_for @course do |c| %>
  <%= c.input :name, :input_html => {:style => 'width: 50%;'} %>
  <%= c.input :instructor, :input_html => {:style => 'width: 50%;'} %>
  <%= c.button :submit %>
<% end %>
</div>

<div class="row">
  <h3>Unhappy with this course?</h3>
  <p>You may delete it - but remember, there is no turning back from here!</p>
    <%= button_to "Delete Course", course_path(@course), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'button b2' %>
</div>

